  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Gateway Request Rate (RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[1m])) by (routed_to)",
          "legendFormat": "{{ routed_to }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "title": "Gateway Latency Percentiles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(gateway_request_latency_seconds_bucket[5m]))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(gateway_request_latency_seconds_bucket[5m]))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(gateway_request_latency_seconds_bucket[5m]))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Error Rate",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total{status=\"error\"}[5m])) / sum(rate(gateway_requests_total[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      }
    },
    {
      "title": "Model Traffic Distribution",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "sum(increase(gateway_model_traffic_total[5m])) by (model)",
          "legendFormat": "{{ model }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Active Requests",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "gateway_active_requests",
          "legendFormat": "In-flight",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Service Health",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{ job }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
